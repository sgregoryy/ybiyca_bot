# Основные настройки Telegram бота
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
DEBUG=false

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=your_password
DB_NAME=subscription_bot

# Настройки подписки на канал-спонсор
REQUIRE_SUBSCRIPTION=true
SPONSOR_CHANNEL_ID=-1001234567890
SPONSOR_CHANNEL_LINK=https://t.me/your_sponsor_channel

# Настройки мультиканального режима
MULTI_CHANNEL_MODE=true
CHANNEL_COUNT=3
CHANNEL_1_ID=-1001234567891
CHANNEL_1_LINK=https://t.me/your_channel_1
CHANNEL_1_NAME=Канал 1
CHANNEL_2_ID=-1001234567892
CHANNEL_2_LINK=https://t.me/your_channel_2
CHANNEL_2_NAME=Канал 2
CHANNEL_3_ID=-1001234567893
CHANNEL_3_LINK=https://t.me/your_channel_3
CHANNEL_3_NAME=VIP Канал

# Настройки методов оплаты
MANUAL_PAYMENT_ENABLED=true
MANUAL_CARD_NUMBER=1234 5678 9012 3456
MANUAL_RECIPIENT_NAME=Иванов Иван
MANUAL_CHANNEL_ID=-1001234567894

# Настройки платежных систем
YOUKASSA_ENABLED=true
YOUKASSA_SHOP_ID=your_shop_id
YOUKASSA_SECRET_KEY=your_secret_key

TINKOFF_ENABLED=true
TINKOFF_TERMINAL_KEY=your_terminal_key
TINKOFF_SECRET_KEY=your_secret_key

CRYPTOBOT_ENABLED=true
CRYPTOBOT_TOKEN=your_cryptobot_token

STARS_ENABLED=false

# Настройки веб-приложения для вебхуков
WEB_HOST=0.0.0.0
WEB_PORT=8000
WEB_URL=https://your-webhook-url.example.com

# Настройки локализации
DEFAULT_LANGUAGE=ru
AVAILABLE_LANGUAGES=ru,en

# Настройки административной панели (опциональные функции)
ADMIN_MANAGE_TARIFFS=true
ADMIN_MANAGE_CHANNELS=true
# Общие настройки
DEBUG=false

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=subscription_bot

# Настройки Telegram бота
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=123456789,987654321
REQUIRE_SUBSCRIPTION=true

# Настройки спонсорского канала
SPONSOR_CHANNEL_ID=-1001234567890
SPONSOR_CHANNEL_LINK=https://t.me/your_channel

# Настройки оплаты
# Ручная оплата
MANUAL_PAYMENT_ENABLED=true
MANUAL_CARD_NUMBER=1234 5678 9012 3456
MANUAL_RECIPIENT_NAME=Иван Иванович И.

# YouKassa
YOUKASSA_ENABLED=false
YOUKASSA_SHOP_ID=your_shop_id
YOUKASSA_SECRET_KEY=your_secret_key

# Tinkoff
TINKOFF_ENABLED=false
TINKOFF_TERMINAL_KEY=your_terminal_key
TINKOFF_SECRET_KEY=your_secret_key

# CryptoBot
CRYPTOBOT_ENABLED=false
CRYPTOBOT_TOKEN=your_cryptobot_token

# Настройки многоканального режима
MULTI_CHANNEL_MODE=false

WEB_HOST=0.0.0.0
WEB_PORT=8000
USE_WEBHOOK=false
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_PATH=/webhook/bot
